<div class="row">
    <div class="col-md-8">
        <h2>All users</h2>
        <table class="table table-striped table-hover table-sm">
            <caption>All users</caption>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
            {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td><a href="#">{{this.login}}</a></td>
                <td>{{this.created}}</td>
                <td class="text-center"><a href='#'>info</a> | <a href='/users/actions/delete/{{this.id}}'>delete</a> | <a href='#'>message</a></td>
            </tr>
            {{/each}}
        </table>
    </div>
    <div class="col-md-4">
        <form action="/users/list" method="POST">
            <div class="form-group mb-3">
                <label for="userLogin">User name</label>
                <input name="login" type="text" class="form-control"
                    id="userLogin" aria-describedby="loginHelp" placeholder="Enter login">
            </div>
            <div class="form-group mb-3">
                <label for="userPassword">Password</label>
                <input name="password" type="password"
                    class="form-control" id="userPassword"
                    placeholder="Password">
            </div>
            <input name="userId" type="hidden" value="-1"/>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>